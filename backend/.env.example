# Backend Environment Variables Example
# Copiar este archivo a .env y ajustar los valores según tu configuración

# === BASE DE DATOS ===
DATABASE_URL=postgresql://usuario:contraseña@localhost:5432/inventario_ropa
DATABASE_TEST_URL=postgresql://usuario:contraseña@localhost:5432/inventario_test

# === REDIS ===
REDIS_URL=redis://localhost:6379/0

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=tu-clave-secreta-super-segura-cambiar-en-produccion

# === APPLICATION SETTINGS ===
ENVIRONMENT=development
DEBUG=true
TIMEZONE=America/Bogota

# === PAGINATION ===
DEFAULT_PAGINATION_LIMIT=50

# === SECURITY ===
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CORS ===
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === HARDWARE INTEGRATION (OPCIONAL) ===
# Arduino/ESP32 para sistema LED
ARDUINO_SERIAL_PORT=/dev/ttyUSB0
ARDUINO_BAUD_RATE=9600

# MQTT para comunicación IoT
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=almacen_ropa

# === EMAIL (OPCIONAL) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_FROM_EMAIL=ventas@almacenropa.com
SMTP_FROM_NAME=Sistema de Ventas

# === BACKUP ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# === MONITORING ===
SENTRY_DSN=
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# === CACHE SETTINGS ===
CACHE_DEFAULT_TTL=300
CACHE_SCAN_TTL=300
CACHE_SEARCH_TTL=180
CACHE_INVENTORY_TTL=300

# === BUSINESS RULES ===
DEFAULT_RESERVATION_MINUTES=30
MAX_RESERVATION_MINUTES=120
LOW_STOCK_THRESHOLD_PERCENT=20
AUTO_CLEANUP_EXPIRED_RESERVATIONS=true

# === POS SETTINGS ===
POS_TERMINAL_ID=tablet-1
AUTO_PRINT_RECEIPTS=false
RECEIPT_PRINTER_IP=192.168.1.100
CASH_DRAWER_ENABLED=false

# === REPORTS ===
REPORT_CACHE_MINUTES=15
EXPORT_MAX_RECORDS=10000
REPORT_EMAIL_ENABLED=false
DAILY_REPORT_TIME="08:00"

# === INTEGRATIONS ===
# Integración con sistemas de contabilidad
ACCOUNTING_SYSTEM_ENABLED=false
ACCOUNTING_API_URL=
ACCOUNTING_API_KEY=

# Integración con proveedores
SUPPLIER_API_ENABLED=false
SUPPLIER_API_URL=
SUPPLIER_API_KEY=

# === DEVELOPMENT ===
# Solo para desarrollo local
RELOAD=true
DEBUG_TOOLBAR=true
PROFILER_ENABLED=false